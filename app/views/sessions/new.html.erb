<div class="container">
  <h1>Sign in</h1>
  <%= form_tag sessions_path do %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= label_tag :email, 'Email', class: 'col-form-label' %>
          <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'matt@packagewith.me', required: true %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= label_tag :password, 'Password', class: 'col-form-label' %>
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Secret', required: true %>
        </div>
      </div>
      <%= submit_tag 'Sign in', class: 'btn btn-primary'  %>
  <% end %>
</div>